									d="M560-160v-80h104L537-367l57-57 126 126v-102h80v240H560Zm-344 0-56-56 504-504H560v-80h240v240h-80v-104L216-160Zm151-377L160-744l56-56 207 207-56 56Z"
								></path></svg
							>
							Data<strong>Generator</strong>
						</a>
					</div>
					<div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
						<div>
							<h2
								class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
							>
								NIF
							</h2>
							<ul
								class="space-y-4 text-gray-600 dark:text-gray-400"
							>
								<li>
									<a
										href={translatePath("/dni")}
										class="hover:underline">DNI</a
									>
								</li>
								<li>
									<a
										href={translatePath("/nie")}
										class="hover:underline">NIE</a
									>
								</li>
								<li>
									<a
										href={translatePath("/cif")}
										class="hover:underline">CIF</a
									>
								</li>
							</ul>
						</div>
						<div>
							<h2
								class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
							>
								Utilidades
							</h2>
							<ul
								class="space-y-4 text-gray-600 dark:text-gray-400"
							>
								<li>
									<a
										href={translatePath("/passwords")}
										class="hover:underline">Passwords</a
									>
								</li>
								<li>
									<a
										href={translatePath("/matriculas")}
										class="hover:underline">Matrículas</a
