---
import {
	getLangFromUrl,
	useTranslations,
	useTranslatedPath,
} from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Data Generator by @salteadorneo",
	description = "Data Generator",
} = Astro.props;
---

<!doctype html>
<html lang={lang} class="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->

		<title>{title}</title>
		<meta name="description" content={description} />

		<script data-no-cookie async src="https://cdn.splitbee.io/sb.js"
		></script>
	</head>
	<body>
		<header>
			<nav
				class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800"
			>
				<div
					class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
				>
					<a
						href="/"
						class="flex items-center gap-1 text-gray-900 dark:text-white"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 -960 960 960"
							fill="currentColor"
							><path
								d="M560-160v-80h104L537-367l57-57 126 126v-102h80v240H560Zm-344 0-56-56 504-504H560v-80h240v240h-80v-104L216-160Zm151-377L160-744l56-56 207 207-56 56Z"
							></path></svg
						>
						Data<strong>Generator</strong>
					</a>
					<div
						class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-1"
						id="mobile-menu-2"
					>
						<ul
							class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0"
						>
							<li>
								<a
									href={translatePath("/dni")}
									class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
									>DNI</a
								>
							</li>
							<li>
								<a
									href={translatePath("/nie")}
									class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
									>NIE</a
								>
							</li>
							<li>
								<a
									href={translatePath("/cif")}
									class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
									>CIF</a
								>
							</li>
							<li>
								<a
									href={translatePath("/passwords")}
									class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
									>Passwords</a
								>
							</li>
							<li>
								<a
									href={translatePath("/matriculas")}
									class="block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
									>Matrículas</a
								>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>
		<slot />
		<footer class="p-4 bg-white sm:p-6 dark:bg-gray-800">
			<div class="mx-auto max-w-screen-xl">
				<div class="md:flex md:justify-between">
					<div>
						<a
							href="/"
							class="flex items-center gap-1 text-gray-900 dark:text-white"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="24"
								height="24"
								viewBox="0 -960 960 960"
