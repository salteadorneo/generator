---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <section class="bg-white dark:bg-gray-900">
        <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
            <h1
                class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white"
            >
                Generador de DNI
            </h1>
            <p
                class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 lg:px-48 dark:text-gray-400"
            >
                Genera tu DNI (NIF, NIE y CIF) aleatorio para simular datos
                reales para tus proyectos o para uso acad√©mico.
            </p>
            <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
                <input
                    data-generation-dni
                    type="text"
                    class="w-48 text-center px-4 py-3 text-2xl font-medium text-gray-900 placeholder-gray-500 bg-white border border-gray-300 rounded-lg shadow-sm outline-none cursor-copy"
                    readonly
                />
                <button
                    data-generate-dni
                    class="inline-flex justify-center items-center py-3 px-5 text-base font-medium text-center text-white rounded-lg bg-blue-700 hover:bg-blue-800"
                >
                    Generar
                </button>
            </div>
        </div>
    </section>
</Layout>

<script>
    import confetti from "canvas-confetti";
    import { generateDNI } from "../utils";

    const input = document.querySelector(
        "[data-generation-dni]",
    ) as HTMLInputElement;
    input.value = generateDNI();

    const button = document.querySelector(
        "[data-generate-dni]",
    ) as HTMLButtonElement;

    button.addEventListener("click", () => {
        input.value = generateDNI();
        confetti({
            spread: 180,
        });
    });

    input.addEventListener("click", () => {
        input.select();
        document.execCommand("copy");
        console.log("Copied to clipboard");
    });
</script>
